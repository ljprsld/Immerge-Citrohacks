<WelcomeView>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: 1, 1, 1  # Set background color to white
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "Welcome to Immerge!"
        color: 0, 0, 0, 1
        font_size: 24
    Image:
        source: "logoimmerge.jpeg"
    Button:
        text: "Sign Up"
        background_normal: ""
        background_color: 0.4, 0.8, 0.9, 1  # Turquoise background color
        on_release: root.sign_up()
    Button:
        text: "Login"
        background_normal: ""
        background_color: 0.4, 0.8, 0.9, 1  # Turquoise background color
        on_release: root.login()